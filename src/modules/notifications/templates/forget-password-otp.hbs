<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="x-apple-disable-message-reformatting" />
    <title>{{title}}</title>
    <style>
      /* Global Reset */
      body, table, td, a {
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        text-size-adjust: 100%;
        margin: 0;
        padding: 0;
      }
      body {
        width: 100%;
        height: 100%;
        font-family: Arial, Roboto, Inter, sans-serif;
        color: rgba(58, 62, 73, 1); /* Primary text */
        line-height: 1.6;
        background-color: rgba(255, 255, 255, 1);
      }
      table {
        border-collapse: collapse !important;
        width: 100%;
      }

      /* Main Email Container */
      .email-container {
        max-width: 600px;
        margin: 40px auto;
        background-color: rgba(255, 255, 255, 1);
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid rgba(39, 39, 39, 1); /* Divider color */
      }

      /* Header */
      .email-header {
        background-color: rgba(0, 144, 243, 1); /* Primary color */
        color: rgba(255, 255, 255, 1); /* White text */
        padding: 20px;
        text-align: center;
      }
      .email-header img {
        width: 180px;
        height: auto;
        margin-bottom: 14px;
      }
      .email-header h1 {
        font-size: 20px;
        margin: 0;
        font-weight: 600;
      }

      /* Body */
      .email-body {
        padding: 30px;
        color: rgba(58, 62, 73, 1); /* Primary text */
      }
      .email-body h2 {
        color: rgba(0, 144, 243, 1); /* Primary */
        font-size: 20px;
        margin: 0 0 15px;
        font-weight: 600;
      }
      .email-body p {
        margin: 15px 0;
        font-size: 16px;
        color: rgba(118, 118, 118, 1); /* Secondary text */
      }

      /* OTP Box */
      .otp-box {
        text-align: center;
        margin: 20px 0;
      }
      .otp {
        display: inline-block;
        background-color: rgba(118, 118, 118, 0.15); /* Grey */
        color: rgba(0, 144, 243, 1); /* Primary */
        font-size: 28px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 8px;
        letter-spacing: 2px;
      }

      /* Dynamic Button */
      .button {
        display: inline-block;
        text-decoration: none;
        padding: 12px 25px;
        font-size: 16px;
        font-weight: 500;
        border-radius: 6px;
        text-transform: none;
        margin-top: 25px;
        background-color: rgba(0, 144, 243, 1); /* Primary */
        color: rgba(255, 255, 255, 1); /* White */
      }
      .button:hover {
        background-color: rgba(0, 120, 220, 1);
      }

      /* Footer */
      .email-footer {
        background-color: rgba(58, 62, 73, 1); /* Paper background */
        text-align: center;
        padding: 20px;
        font-size: 14px;
        color: rgba(255, 255, 255, 0.7);
        border-top: 1px solid rgba(39, 39, 39, 1);
      }
      .email-footer a {
        color: rgba(0, 144, 243, 1);
        text-decoration: none;
      }

      /* Responsive */
      @media screen and (max-width: 600px) {
        .email-container {
          width: 100% !important;
        }
        .email-body, .email-header, .email-footer {
          padding: 20px;
        }
        .otp {
          font-size: 24px;
        }
        .button {
          font-size: 14px;
          padding: 10px 20px;
        }
      }
    </style>
  </head>
  <body>
    <center>
      <table role="presentation" class="email-container">
        <!-- Header -->
        <tr>
          <td class="email-header">
            <img src="{{backend_url}}/images/defaults/app-logo.svg" alt="{{company_name}} Logo" />
            <h1>{{title}}</h1>
          </td>
        </tr>

        <!-- Body -->
        <tr>
          <td class="email-body">
            <h2>Hello, {{name}}</h2>
            <p>{{message}}:</p>
            <div class="otp-box">
              <div class="otp">{{otp_code}}</div>
            </div>
            <p>If you prefer, you can also reset your password by clicking the button below:</p>
            <p style="text-align: center;">
              <a href="{{reset_url}}" class="button">Reset Password</a>
            </p>
            <p>If you did not request this password reset, please ignore this email. If you have any concerns, contact our support team immediately.</p>
          </td>
        </tr>

        <!-- Footer -->
        <tr>
          <td class="email-footer">
            &copy; {{year}} {{company_name}}. All rights reserved.
          </td>
        </tr>
      </table>
    </center>
  </body>
</html>
